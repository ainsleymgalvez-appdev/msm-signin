<div>
  <div>
    <h1>
      <%= @current_user.first_name %>'s bookmarks
    </h1>
  </div>
</div>

<div>
  <div>

    <form action="/insert_bookmark" method="post">

      <div>
      
        <%# <input type="text" id="movie_id_box" name="query_movie_id"> %>

        <select name="query_movie_id" id="movie_id_box">

          <% Movie.all.order(:title).each do |a_movie| %>
          <option value = "<%= a_movie.id %>"><%= a_movie.title %></li>
          <% end %>

        </select>

        <button>
        Bookmark this movie!
      </button>

      </div>  
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>
        <td>
          <a href="/movies/<%= a_bookmark.movie_id %>"><%= a_bookmark.movie.title %></a>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>

        <td>
          <a href="/delete_bookmark/<%= a_bookmark.id %>">
            Un-bookmark
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
